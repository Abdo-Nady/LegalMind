# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# PostgreSQL with pgvector connection (for vector embeddings)
# Use container name 'documind_db' when running in Docker
PGVECTOR_CONNECTION_STRING=postgresql+psycopg://postgres:postgres@documind_db:5432/documind

# Django Database Configuration (uses same PostgreSQL instance)
DB_NAME=documind
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Email Configuration (Brevo)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-brevo-email@example.com
EMAIL_HOST_PASSWORD=your-brevo-smtp-key-here
DEFAULT_FROM_EMAIL=noreply@documind.com
DEFAULT_FROM_NAME=DocuMind

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# AWS S3 Storage Configuration
# Set USE_S3=true to enable S3 storage (for production)
USE_S3=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=documind-storage
AWS_S3_REGION_NAME=us-east-1
DEBUG =
SECRET_KEY =
